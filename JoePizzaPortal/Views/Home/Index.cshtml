@model IEnumerable<JoePizzaPortal.Models.Pizza>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Well done!</h4>
        <p>@TempData["msg"]</p>
        <hr>
        <p class="mb-0">Check Our Website for Further Updates and You can Track your Orders</p>
    </div>


}

<div class="row">
    <div class="col-lg-10 col-md-10 col-sm-10">
        @if (TempData["total"] == null)
        {

            <h3>
                Total Bill: 0 Rs
            </h3>
        }
        else
        {
            <h3> Total Bill: @TempData["total"] Rs</h3>

        }

    </div>


    <div class="col-lg-2 col-md-2 col-sm-2">
        <h3 style="color:#808080; font-family:'Arial Rounded MT';text-align:center"> <span class="btn btn-info">@Html.ActionLink("Check Out", "checkout", "Home")</span></h3>
    </div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>



</div>






<div class="container">
    <div class="row">



        @foreach (var item in Model)
        {

            <div class="col-md-2">

                <img style="min-height:200px;width:200px" src="@Url.Content(item.ProductImage)" />
                <h4 style="text-align:center">@item.ProductName</h4>
                <h5 style="text-align:center">@item.ProductPrice </h5>
                <a class="btn btn-danger" href="@Url.Action("AddtoCart", new { id = @item.ProductId })"> Add to Cart </a>
            </div>

        }





    </div>
</div>

     